<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/CONTENT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/PAGE"
        android:layout_alignTop="@id/PAGE"
        android:layout_marginStart="0dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"
        android:text =
            "For health problems\nsuch as being too\nthin, there will be\nhealth problems such\nas malnutrition,\nosteoporosis, and\nsudden death. BMI\n&lt; 18.5"
        android:textAlignment="viewStart"
        android:textSize="26sp"
        tools:ignore="HardcodedText,RtlCompat" />

    <TextView
        android:id="@+id/PAGE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="BMI Info. (Page III)"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/SLIDE_RIGHT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slide Right"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="normal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        tools:ignore="HardcodedText" />
</RelativeLayout>